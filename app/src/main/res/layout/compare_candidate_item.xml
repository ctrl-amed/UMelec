<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/candidate_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/compare_candidate_unselected_bg"
    android:padding="12dp"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/iv_profile_picture"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile"
        android:contentDescription="Candidate Photo"
        android:layout_marginEnd="12dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Candidate Name"
            android:textSize="16sp"
            android:textColor="#0E0E2C"
            android:fontFamily="@font/montserrat_semi_bold"/>

        <TextView
            android:id="@+id/tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Position"
            android:textSize="12sp"
            android:textColor="#8C8CA1"
            android:fontFamily="@font/poppins_regular"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/check_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_check"
        android:visibility="gone"
        app:tint="#FFFFFF"
        android:contentDescription="Selected" />

</LinearLayout>