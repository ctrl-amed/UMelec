<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0039A6"
    tools:context=".RegisterActivity">




    <!-- Header Content (Fixed at the top) -->
    <LinearLayout
        android:id="@+id/HeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ðŸ”¹ Back Arrow (now outside the white container) -->

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="back_button_content_description"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#FFFFFF" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/GreetingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"

            >

            <LinearLayout
                android:id="@+id/greetingTextLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                android:gravity="center_horizontal"
                >



            <TextView
                    android:id="@+id/NameTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="25sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="#FAFCFE"
                    />
                <ImageView
                    android:id="@+id/ProfilePicture"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/profile"
                    android:contentDescription="Candidate Photo"

                    android:scaleType="centerCrop"/>


            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <!-- ðŸ”¹ White Rounded Container for Registration -->
    <LinearLayout
        android:id="@+id/registerContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_white_bg"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="230dp"
        android:gravity="center_horizontal">

        <!-- Your registration form content goes here -->
        <TextView
            android:id="@+id/nameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="#0E0E2C"
            android:layout_marginBottom="10dp" />

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_gray_bg"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:elevation="4dp"
            android:outlineProvider="bounds"
            android:clipToPadding="false">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: "
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_regular"/>
                <TextView
                    android:id="@+id/EmailValue"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="jluna.a12345678@gmail.com"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>

        </LinearLayout>
        <!-- END FIRST CONTENT CARD -->

        <!-- Student ID -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_gray_bg"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:elevation="4dp"
            android:outlineProvider="bounds"
            android:clipToPadding="false">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student ID: "
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_regular"/>
                <TextView
                    android:id="@+id/StudentIDValue"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="A12345678"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>

        </LinearLayout>
        <!-- END FIRST CONTENT CARD -->

        <!-- Year -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_gray_bg"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:elevation="4dp"
            android:outlineProvider="bounds"
            android:clipToPadding="false">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year: "
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_regular"/>
                <TextView
                    android:id="@+id/YearValue"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="3rd year"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>

        </LinearLayout>
        <!-- END FIRST CONTENT CARD -->

        <!-- College -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_gray_bg"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:elevation="4dp"
            android:outlineProvider="bounds"
            android:clipToPadding="false">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="College: "
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_regular"/>
                <TextView
                    android:id="@+id/CollegeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="CCIS"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>

        </LinearLayout>
        <!-- END FIRST CONTENT CARD -->

        <!-- Year -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_gray_bg"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:elevation="4dp"
            android:outlineProvider="bounds"
            android:clipToPadding="false">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: "
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_regular"/>
                <TextView
                    android:id="@+id/statusValue"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Eligible"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>

        </LinearLayout>
        <!-- END FIRST CONTENT CARD -->






    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



