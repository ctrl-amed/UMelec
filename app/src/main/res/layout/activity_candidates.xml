<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0039A6"
    tools:context=".Homepage">

    <!-- Header Content (Fixed at the top) -->
    <LinearLayout
        android:id="@+id/HeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Candidates"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#FAFCFE" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/GreetingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">



            <LinearLayout
                android:id="@+id/greetingTextLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">



                <!-- <TextView
                    android:id="@+id/NameTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:textColor="#FAFCFE" /> -->
            </LinearLayout>

            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/notification"
                android:contentDescription="Notification"
                app:tint="#FAFCFE"
                app:layout_constraintEnd_toStartOf="@id/profileIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"/>

            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/profile"
                android:contentDescription="Profile"
                app:tint="#FAFCFE"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:clickable="true"
                android:focusable="true"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


    <!-- ðŸ”¹ SCROLLABLE WHITE CONTAINER (Main Content) ðŸ”¹ -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/WhiteContainerScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/rounded_white_bg"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/FooterLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- CONTENT CONTAINER: ADD ALL YOUR SCROLLABLE CONTENT HERE -->
        <LinearLayout
            android:id="@+id/ContentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp"
            android:gravity="center_horizontal">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Candidates Position"
                android:textSize="20sp"
                android:textColor="#0E0E2C"

                android:fontFamily="@font/montserrat_semi_bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click the position name to see all the candidates applying for that position."
                android:textSize="15sp"
                android:textColor="#0E0E2C"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/poppins_regular" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/PositionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            >

            <LinearLayout
                android:id="@+id/btnPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:gravity="center"
                android:background="@drawable/blue_rounded_button"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/Positions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chairperson"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:fontFamily="@font/montserrat_bold"/>

            </LinearLayout>


        </LinearLayout>


            <LinearLayout
                android:id="@+id/FaqLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_gray_bg"
                android:padding="16dp"
                android:layout_marginBottom="20dp"

                android:outlineProvider="bounds"
                android:clipToPadding="false">

                <TextView
                    android:id="@+id/QuestionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Candidates Comparison"
                    android:textSize="20sp"
                    android:textColor="#0E0E2C"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/montserrat_semi_bold" />

                <TextView
                    android:id="@+id/AnswerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You can compare up to 2 candidates for each position."
                    android:textSize="15sp"
                    android:textColor="#4A4A68"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/montserrat_semi_bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginBottom="20dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCompare"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Compare"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:background="@drawable/blue_rounded_button"
                    android:textAllCaps="false"
                    android:fontFamily="@font/montserrat_bold"/>

            </LinearLayout>





            <!-- Placeholder for long content to enable scrolling -->

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0F7F0"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>
        <!-- END CONTENT CONTAINER -->

    </androidx.core.widget.NestedScrollView>


    <!-- FOOTER (Fixed at the bottom with elevation for shadow effect) -->
    <LinearLayout
        android:id="@+id/FooterLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/footer"
        android:gravity="center"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                android:contentDescription="Home"
                app:tint="#666666" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"

                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#333333"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_vote"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_vote"
                android:contentDescription="Vote"
                app:tint="#666666" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vote"
                android:textSize="12sp"
                android:textColor="#333333"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_regular"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_candidates"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_candidates"
                android:contentDescription="Candidates"
                app:tint="#0039A6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Candidates "
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="@drawable/blue_rounded_text_bg"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_regular"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_results"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_results"
                android:contentDescription="Results"
                app:tint="#666666" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Results"
                android:textSize="12sp"
                android:textColor="#333333"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_regular"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_faq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_faq"
                android:contentDescription="FAQs"
                app:tint="#666666" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  FAQs  "
                android:textSize="12sp"
                android:textColor="#333333"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_regular"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
