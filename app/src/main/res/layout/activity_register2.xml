<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0039A6"
    tools:context=".RegisterActivity">

    <!-- ðŸ”¹ Back Arrow (now outside the white container) -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrow_back"
        app:tint="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="back_button_content_description" />

    <!-- ðŸ”¹ White Rounded Container for Registration -->
    <LinearLayout
        android:id="@+id/registerContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_white_bg"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal">

        <!-- Your registration form content goes here -->
        <TextView
            android:id="@+id/registerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#0E0E2C"
            android:layout_marginBottom="24dp" />

        <!-- STUDENT ID -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutStudentID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:boxStrokeColor="#0039A6"
            app:hintTextColor="#8C8CA1"
            app:startIconTint="#8C8CA1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputStudentID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your Student ID"
                android:inputType="text|textCapCharacters"
            android:maxLength="9"
            android:maxLines="1"
            android:imeOptions="actionDone|flagNoExtractUi"
            android:textColor="#000000"
            android:textColorHint="#8C8CA1"
            android:fontFamily="@font/poppins_regular" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/StudentIDRequirements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/reqStudentID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Field is required"
                android:textColor="#8C8CA1"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>



        <!-- FIRSTNAME -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutFirstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:boxStrokeColor="#0039A6"
            app:hintTextColor="#8C8CA1"
            app:startIconTint="#8C8CA1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputFirstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your Firstname"
                android:inputType="textPersonName|textCapWords"
                android:textColor="#000000"
                android:textColorHint="#8C8CA1"
                android:fontFamily="@font/poppins_regular" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/FirstnameRequirements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/reqFirstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Field is required"
                android:textColor="#8C8CA1"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"/>

        </LinearLayout>


        <!-- LASTNAME -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutLastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:boxStrokeColor="#0039A6"
            app:hintTextColor="#8C8CA1"
            app:startIconTint="#8C8CA1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputLastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your Lastname"
                android:inputType="textPersonName|textCapWords"
                android:textColor="#000000"
                android:textColorHint="#8C8CA1"
                android:fontFamily="@font/poppins_regular" />
        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:id="@+id/LastnameRequirements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/reqLastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Field is required"
                android:textColor="#8C8CA1"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"/>

        </LinearLayout>

        <!-- COLLEGE-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutCollege"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:hint="Enter your College"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:boxStrokeColor="#0039A6"
            app:hintTextColor="#8C8CA1"
            app:startIconTint="#8C8CA1">

            <AutoCompleteTextView
                android:id="@+id/inputCollege"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text|textCapWords"
                android:textColor="#000000"
                android:textColorHint="#8C8CA1"
                android:fontFamily="@font/poppins_regular"
                android:completionThreshold="1" /> <!-- Start showing suggestions after 1 letter -->

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/CollegeRequirements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/reqCollege"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Field is required"
                android:textColor="#8C8CA1"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"/>

        </LinearLayout>
        <!-- YEAR -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:hint="Enter your Year"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:boxStrokeColor="#0039A6"
            app:hintTextColor="#8C8CA1"
            app:startIconTint="#8C8CA1">

            <AutoCompleteTextView
                android:id="@+id/inputYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text|textCapWords"
                android:textColor="#000000"
                android:textColorHint="#8C8CA1"
                android:fontFamily="@font/poppins_regular"
                android:completionThreshold="1" /> <!-- Start showing suggestions after 1 letter -->

        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:id="@+id/YearRequirements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/reqYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Field is required"
                android:textColor="#8C8CA1"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"/>

        </LinearLayout>




        <!-- Spacer View: This will push the button to the bottom -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:text="Confirm"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:background="@drawable/rounded_button_selector"
            app:backgroundTint="@null" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



