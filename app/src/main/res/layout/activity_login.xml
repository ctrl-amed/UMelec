<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0039A6"
    tools:context=".RegisterActivity">
    <!-- ðŸ”¹ Back Arrow (now outside the white container) -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrow_back"
        app:tint="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="back_button_content_description" />


    <!-- ðŸ”¹ White Rounded Container for Registration -->
    <LinearLayout
        android:id="@+id/registerContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_white_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <!-- Your registration form content goes here -->
        <TextView
            android:id="@+id/loginTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Login"
            android:textColor="#0E0E2C"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!-- EMAIL -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:boxStrokeColor="#0039A6"
            app:hintTextColor="#8C8CA1"
            app:startIconDrawable="@drawable/email_icon"
            app:startIconTint="#8C8CA1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter UMak Email"
                android:inputType="textEmailAddress"
                android:paddingStart="50dp"
                android:textColor="#000000"
                android:textColorHint="#8C8CA1"
                android:fontFamily="@font/poppins_regular" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/EmailRequirements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/reqEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Please use your UMak email (@umak.edu.ph)"
                android:textColor="#8C8CA1"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"/>

        </LinearLayout>

        <!-- PASSWORD -->

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:boxStrokeColor="#0039A6"
            app:hintTextColor="#8C8CA1"
            app:startIconDrawable="@drawable/lock_icon"
            app:startIconTint="#8C8CA1"
            app:endIconMode="password_toggle"
            app:endIconTint="#8C8CA1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:paddingStart="50dp"
                android:textColor="#000000"
                android:textColorHint="#8C8CA1"
                android:fontFamily="@font/poppins_regular" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password requirements -->
        <LinearLayout
            android:id="@+id/PasswordRequirements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/reqPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Field is required"
                android:textColor="#8C8CA1"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>

        <!-- FORGOT PASSWORD -->
        <LinearLayout
            android:id="@+id/ForgotPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/ForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password"
                android:textColor="#318CE7"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                android:clickable="true"
                android:focusable="true"
                />
        </LinearLayout>



        <!-- Spacer View: This will push the button to the bottom -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:background="@drawable/rounded_button_selector"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:backgroundTint="@null" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



