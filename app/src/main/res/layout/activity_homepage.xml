<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0039A6"
    tools:context=".Homepage">

    <!-- Header Content (Fixed at the top) -->
    <LinearLayout
        android:id="@+id/HeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/UmelecTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UMelec"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#FAFCFE" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/GreetingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/greetingTextLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/GreetingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi,"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:textColor="#FAFCFE" />

                <TextView
                    android:id="@+id/NameTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Name"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:textColor="#FAFCFE" />
            </LinearLayout>

            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/notification"
                android:contentDescription="Notification"
                app:tint="#FAFCFE"
                app:layout_constraintEnd_toStartOf="@id/profileIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"/>

            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/profile"
                android:contentDescription="Profile"
                app:tint="#FAFCFE"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:clickable="true"
                android:focusable="true"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


    <!-- 🔹 SCROLLABLE WHITE CONTAINER (Main Content) 🔹 -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/WhiteContainerScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/rounded_white_bg"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/FooterLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- CONTENT CONTAINER: ADD ALL YOUR SCROLLABLE CONTENT HERE -->
        <LinearLayout
            android:id="@+id/ContentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp"
            android:gravity="center_horizontal">



            <!-- 📝 FIRST CONTENT CARD: Election Information 📝 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_gray_bg"
                android:padding="16dp"
                android:layout_marginBottom="20dp"
                android:outlineProvider="bounds"
                android:clipToPadding="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Election Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#0039A6"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/montserrat_semi_bold" />

                <TextView
                    android:id="@+id/textNoElection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No election is currently scheduled."
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/poppins_regular"
                    android:visibility="gone" /> <LinearLayout
                android:id="@+id/UpcomingLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp"
                android:visibility="gone"> <TextView
                android:id="@+id/textUpcoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voting opens on "
                android:textSize="16sp"
                android:textColor="#666666"
                android:fontFamily="@font/poppins_regular"/>

                <TextView
                    android:id="@+id/UpcomingDateValue"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Date"
                    android:textColor="#666666"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>

                <TextView
                    android:id="@+id/textElectionEnded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Election has ended."
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/poppins_regular"
                    android:visibility="gone"/> <LinearLayout
                android:id="@+id/OngoingLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"> <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title: "
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_regular"/>
                <TextView
                    android:id="@+id/electionTitleValue"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Student Council Leadership Election"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Voting Period: "
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_regular"/>
                    <TextView
                        android:id="@+id/votingPeriodValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="October 10 - 15, 2025"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="normal"
                        android:fontFamily="@font/poppins_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status: "
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_regular"/>
                    <TextView
                        android:id="@+id/statusValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#007F00"
                        android:fontFamily="@font/poppins_regular"/>
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginBottom="20dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnVoteNow"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Vote Now"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:background="@drawable/blue_rounded_button"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_bold"/>

            </LinearLayout>


            <!-- 📝 SECOND CONTENT CARD: Candidates Preview 📝 -->
            <LinearLayout
                android:id="@+id/CandidatesPreviewCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_gray_bg"
                android:padding="16dp"
                android:layout_marginBottom="20dp"
                android:elevation="4dp"
                android:outlineProvider="bounds"
                android:clipToPadding="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Candidates Preview"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#0039A6"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/montserrat_semi_bold"/>

                <TextView
                    android:id="@+id/textNoCandidates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No candidates available at the moment."
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/poppins_regular"/>

                <TextView
                    android:id="@+id/textCandidatesEnded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Election has ended."
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/poppins_regular"/>

                <!-- CONTAINER FOR ARROWS AND HORIZONTAL CANDIDATE LIST -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/CandidateContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Left Arrow Button -->
                    <ImageButton
                        android:id="@+id/btnPrevCandidate"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_chevron_left"
                        android:contentDescription="Previous Candidate"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:tint="#666666"/>

                    <!-- Candidate List (Horizontal ScrollView) -->
                    <HorizontalScrollView
                        android:id="@+id/candidateScrollView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/btnPrevCandidate"
                        app:layout_constraintEnd_toStartOf="@id/btnNextCandidate">

                        <LinearLayout
                            android:id="@+id/candidateListContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- CANDIDATE ITEM 1 (Fixed Width to show 2 per screen)
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                android:padding="8dp">

                                <ImageView
                                    android:id="@+id/candidatePhoto"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/rounded_gray_bg"
                                    android:contentDescription="Candidate Photo"
                                    android:background="#D0D0D0"
                                    android:scaleType="centerCrop"/>
                                <TextView
                                    android:id="@+id/candidateName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="John Doe"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="#333333"
                                    android:layout_marginTop="4dp"
                                    android:fontFamily="@font/montserrat_semi_bold" />
                                <TextView
                                    android:id="@+id/candidatePosition"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="President"
                                    android:textSize="14sp"
                                    android:textColor="#333333"
                                    android:fontFamily="@font/poppins_regular"/>
                            </LinearLayout>
                            -->

                            <!-- CANDIDATE ITEM 2 -->

                            <!-- CANDIDATE ITEM 3 (Starts off-screen) -->

                            <!-- Add more candidate items here if needed -->

                        </LinearLayout>
                    </HorizontalScrollView>

                    <!-- Right Arrow Button -->
                    <ImageButton
                        android:id="@+id/btnNextCandidate"
                        android:layout_width="32dp"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_chevron_right"
                        android:contentDescription="Next Candidate"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:tint="#666666"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
            <!-- END SECOND CONTENT CARD -->

            <!-- 🚀 BUTTON CONTAINER (Aligns button to the right) 🚀 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginBottom="20dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnViewAll"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="View All"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:background="@drawable/blue_rounded_button"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_bold"/>

            </LinearLayout>



            <!-- 📝 THIRD CONTENT CARD: Result Preview 📝 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_gray_bg"
                android:padding="16dp"
                android:layout_marginBottom="20dp"
                android:elevation="4dp"
                android:outlineProvider="bounds"
                android:clipToPadding="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Result Preview"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#0039A6"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/montserrat_semi_bold"/>


                    <TextView
                        android:id="@+id/textLiveTallies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Live tallies are available in Election Monitoring"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:fontFamily="@font/poppins_regular"/>

                <TextView
                    android:id="@+id/textNoResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No result available at the moment."
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/poppins_regular"/>


                <!-- CONTAINER FOR ARROWS AND HORIZONTAL CANDIDATE LIST -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ResultsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Left Arrow Button -->
                    <ImageButton
                        android:id="@+id/btnPrevCandidateResults"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_chevron_left"
                        android:contentDescription="Previous Candidate"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:tint="#666666"/>

                    <!-- Candidate List (Horizontal ScrollView) -->
                    <HorizontalScrollView
                        android:id="@+id/candidateScrollViewResults"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/btnPrevCandidateResults"
                        app:layout_constraintEnd_toStartOf="@id/btnNextCandidateResults">

                        <LinearLayout
                            android:id="@+id/candidateListContainerResults"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- CANDIDATE ITEM 1 (Fixed Width to show 2 per screen)
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                android:padding="8dp">

                                <ImageView
                                    android:id="@+id/resultsPhoto"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/rounded_gray_bg"
                                    android:contentDescription="Candidate Photo"
                                    android:background="#D0D0D0"
                                    android:scaleType="centerCrop"/>
                                <TextView
                                    android:id="@+id/resultsName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="John Doe"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="#333333"
                                    android:layout_marginTop="4dp"
                                    android:fontFamily="@font/montserrat_semi_bold" />
                                <TextView
                                    android:id="@+id/resultsPosition"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="President"
                                    android:textSize="14sp"
                                    android:textColor="#333333"
                                    android:fontFamily="@font/poppins_regular"/>
                            </LinearLayout> -->

                            <!-- CANDIDATE ITEM 2 -->


                            <!-- CANDIDATE ITEM 3 (Starts off-screen) -->


                            <!-- Add more candidate items here if needed -->

                        </LinearLayout>
                    </HorizontalScrollView>

                    <!-- Right Arrow Button -->
                    <ImageButton
                        android:id="@+id/btnNextCandidateResults"
                        android:layout_width="32dp"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_chevron_right"
                        android:contentDescription="Next Candidate"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:tint="#666666"/>

                </androidx.constraintlayout.widget.ConstraintLayout>



            </LinearLayout>
            <!-- END FIRST CONTENT CARD -->

            <!-- 🚀 BUTTON CONTAINER (Aligns button to the right) 🚀 -->
            <LinearLayout
                android:id="@+id/LiveTallyLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnViewLiveTally"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="View Live Tally"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:background="@drawable/blue_rounded_button"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginBottom="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ResultsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnResults"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="View Results"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:background="@drawable/blue_rounded_button"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginBottom="20dp"/>

            </LinearLayout>


            <!-- Placeholder for long content to enable scrolling -->


            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0F7F0"
                android:layout_marginBottom="10dp"/>





        </LinearLayout>
        <!-- END CONTENT CONTAINER -->



    </androidx.core.widget.NestedScrollView>


    <!-- FOOTER (Fixed at the bottom with elevation for shadow effect) -->
    <LinearLayout
        android:id="@+id/FooterLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/footer"
        android:gravity="center"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                android:contentDescription="Home"
                app:tint="#0039A6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="@drawable/blue_rounded_text_bg"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/poppins_regular"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_vote"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_vote"
                android:contentDescription="Vote"
                app:tint="#666666" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vote"
                android:textSize="12sp"
                android:textColor="#333333"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_regular"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_candidates"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_candidates"
                android:contentDescription="Candidates"
                app:tint="#666666" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Candidates"
                android:textSize="12sp"
                android:textColor="#333333"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_regular"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_results"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
