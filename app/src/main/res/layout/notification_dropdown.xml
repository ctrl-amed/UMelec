<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/notification_bg"> <ImageView
    android:id="@+id/closeDropdownButton"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:src="@drawable/ic_close" android:contentDescription="Close"
    app:tint="#333333"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:clickable="true"
    android:focusable="true" />

    <TextView
        android:id="@+id/notificationHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/closeDropdownButton"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/notificationListContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/notificationHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </LinearLayout>

    <TextView
        android:id="@+id/noNotificationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No notification here"
        android:textSize="16sp"
        android:textColor="#333333"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/notificationListContainer"
        app:layout_constraintBottom_toBottomOf="@id/notificationListContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/viewAllButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View all"
        android:textSize="16sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/notificationListContainer"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>