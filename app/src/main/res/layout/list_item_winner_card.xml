<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/CandidateCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:layout_gravity="center_horizontal"
    android:gravity="center_vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/candidate_profile_photo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="centerCrop"
        android:layout_marginEnd="16dp"
        app:civ_border_color="#FAFCFE"
        app:civ_border_width="2dp"
        android:contentDescription="Candidate Profile Image"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/candidate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jane Doe"
            android:textSize="18sp"
            android:textColor="#FAFCFE"
            android:fontFamily="@font/montserrat_bold"
            />

        <TextView
            android:id="@+id/candidate_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vice-Chairperson"
            android:textSize="14sp"
            android:textColor="#FAFCFE"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="2dp"
            />

        <TextView
            android:id="@+id/candidate_total_votes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,250 Votes"
            android:textSize="16sp"
            android:textColor="#FAFCFE"
            android:fontFamily="@font/montserrat_semi_bold"
            android:layout_marginTop="6dp"
            />

    </LinearLayout>
</LinearLayout>