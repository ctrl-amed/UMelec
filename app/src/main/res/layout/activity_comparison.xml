<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0039A6"
    tools:context=".RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/HeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="back_button_content_description"
            android:src="@drawable/ic_arrow_back"
            app:tint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/NameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compare Candidates"
            android:textSize="25sp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#FAFCFE"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/WhiteContainerScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/rounded_white_bg"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/FooterLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true"
        android:backgroundTint="#0039A6">

        <LinearLayout
            android:id="@+id/ComparisonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="30dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/Candidate1Container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_gray_bg"
                android:padding="20dp"
                android:layout_marginBottom="20dp"
                android:outlineProvider="bounds"
                android:clipToPadding="false"
                android:gravity="top"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingTop="4dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_profile_picture1"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@android:drawable/sym_def_app_icon"
                        android:scaleType="centerCrop"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#CCCCCC" />

                    <TextView
                        android:id="@+id/tv_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jane Doe"
                        android:textSize="20sp"
                        android:textColor="#4A4A68"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/montserrat_semi_bold"/>

                    <TextView
                        android:id="@+id/credentialsTitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Credentials:"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textColor="#4A4A68"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="left"/>

                    <TextView
                        android:id="@+id/credentialsValue1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorem ipsum"
                        android:textSize="15sp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#4A4A68"
                        android:layout_marginBottom="20dp"
                        android:layout_gravity="left" />

                    <TextView
                        android:id="@+id/advocacyTitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Advocacy:"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textColor="#4A4A68"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="left"/>

                    <TextView
                        android:id="@+id/advocacyValue1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorem ipsum"
                        android:textSize="15sp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#4A4A68"
                        android:layout_gravity="left" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Candidate2Container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_gray_bg"
                android:baselineAligned="false"
                android:clipToPadding="false"
                android:gravity="top"
                android:orientation="horizontal"
                android:outlineProvider="bounds"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="4dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_profile_picture2"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/sym_def_app_icon"
                        app:civ_border_color="#CCCCCC"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:id="@+id/tv_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="Jane Doe"
                        android:textColor="#4A4A68"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/credentialsTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="Credentials:"
                        android:textColor="#4A4A68"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/credentialsValue2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Lorem ipsum"
                        android:textColor="#4A4A68"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/advocacyTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="Advocacy:"
                        android:textColor="#4A4A68"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/advocacyValue2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Lorem ipsum"
                        android:textColor="#4A4A68"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/FooterLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/footer"
        android:gravity="center"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                android:contentDescription="Home"
                app:tint="#666666" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"

                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#333333"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_vote"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_vote"
                android:contentDescription="Vote"
                app:tint="#666666" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vote"
                android:textSize="12sp"
                android:textColor="#333333"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_regular"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_candidates"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_candidates"
                android:contentDescription="Candidates"
                app:tint="#0039A6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Candidates "
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="@drawable/blue_rounded_text_bg"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_regular"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_results"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_results"
                android:contentDescription="Results"
                app:tint="#666666" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Results"
                android:textSize="12sp"
                android:textColor="#333333"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_regular"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_faq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_faq"
                android:contentDescription="FAQs"
                app:tint="#666666" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  FAQs  "
                android:textSize="12sp"
                android:textColor="#333333"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_regular"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>